@{
    ViewBag.Title = "Manage Categories";
}

@section AdminHeader
{
    <link href="@Url.Content("~/Content/jstree/themes/proton/style.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Content/jstree/jstree.min.js")"></script>
    <script>
        $(function () {
            $('#container').jstree({
                'core': {
                    'themes': {
                        'name': 'proton',
                        'responsive': true
                    }
                }
            }).bind("select_node.jstree", function (e, data) {
                var href = data.node.a_attr.href;
                document.location.href = href;
            });
        });
    </script>

}

<div class="topadminsubnav">
    <div class="btn-group" role="group">
        <a href="@Url.Action("Index")" role="button" class="btn btn-primary">Manage Categories</a>
        <a href="@Url.Action("CreateCategory")" role="button" class="btn btn-primary">Create New</a>
    </div>
</div>


