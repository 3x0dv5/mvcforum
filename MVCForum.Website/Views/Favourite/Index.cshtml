@using MVCForum.Website.Application
@model MVCForum.Website.ViewModels.MyFavouritesViewModel
@{
    Layout = "~/Views/Shared/_LayoutRightSideBar.cshtml";
    ViewBag.Title = Html.Lang("Favourites.PageTitle");    
}

@section side
{
    @Html.Action("Index", "Language")
    @Html.Action("ListCategorySideMenu", "Category")
    @Html.Action("SideSearch", "Search")
    @Html.Action("PopularTags", "Tag")
    @Html.Action("CurrentWeekHighPointUsers", "Point")
    @Html.Action("HotTopics", "Topic")
}

<div class="myfavourites">
    
    <h1>@ViewBag.Title</h1>

    @if (Model.Posts.Any())
    {
        foreach (var postViewModel in Model.Posts)
        {
            @Html.Partial("_Post", postViewModel)
        }
    }
    else
    {
        <p>@Html.Lang("Favourites.NoMemberFavourites")</p>
    }
</div>