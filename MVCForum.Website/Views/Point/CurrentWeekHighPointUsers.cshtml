@using MVCForum.Domain.Constants
@using System.Linq;
@using MVCForum.Utilities
@using MVCForum.Website
@model MVCForum.Website.ViewModels.HighEarnersPointViewModel

@if (Html.Settings().EnablePoints)
{
    <div class="side-box highearners-box">
    <h5>@Html.LanguageString("Points.ThisWeeksHighEarners")</h5>

    <ul>
        @foreach (var dict in Model.HighEarners.Where(x => x.Value > 0))
        {    
            <li class="clearfix">
                <span class="earnername">
                    <img src="@dict.Key.MemberImage(SiteConstants.GravatarLeaderboardSize)" alt="@dict.Key.UserName">
                    <a href="@dict.Key.NiceUrl">@dict.Key.UserName</a>
                </span>
                <span class="earneramount">
                    <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span> @dict.Value
                </span>
            </li>
        }
    </ul>

    </div>
}